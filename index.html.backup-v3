        }
        
        // Show Toast
        function showToast(message) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.classList.add('show');
            setTimeout(() => {
                toast.classList.remove('show');
            }, 3000);
        }
        
        // Visitor Counter (simulated with localStorage)
        function updateVisitorCount() {
            const countElement = document.getElementById('visitor-count');
            let count = localStorage.getItem('visitorCount');
            
            if (!count) {
                // Simulate a starting count
                count = Math.floor(Math.random() * 500) + 100;
            } else {
                count = parseInt(count) + Math.floor(Math.random() * 3) + 1;
            }
            
            localStorage.setItem('visitorCount', count);
            countElement.textContent = `${count.toLocaleString()} visitas`;
        }
        
        updateVisitorCount();
        
        // Animate progress bars on scroll
        const progressBars = document.querySelectorAll('.progress-bar');
        const observerOptions = {
            threshold: 0.5,
            rootMargin: '0px'
        };
        
        const progressObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('animate');
                }
            });
        }, observerOptions);
        
        progressBars.forEach(bar => {
            progressObserver.observe(bar);
        });
        
        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
        
        // Add fade-in classes to elements as they scroll into view
        const fadeElements = document.querySelectorAll('.bento-card, .md\\:col-span-8, .md\\:col-span-4');
        const fadeObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('fade-in');
                }
            });
        }, { threshold: 0.1 });
        
        fadeElements.forEach((el, index) => {
            el.style.animationDelay = `${index * 0.05}s`;
            fadeObserver.observe(el);
        });
